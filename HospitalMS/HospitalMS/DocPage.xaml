<Page x:Class="HospitalMS.DocPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DocPage">

    <Grid>
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FF0075D4" Foreground="White" FontWeight="Bold">
            <MenuItem Header="Dashboard" Click="DashboardClicked"/>
            <MenuItem Header="Profile" Click="ProfileClicked"/>
            <MenuItem Header="Log Out" Click="LogOutClicked"/>
        </Menu>
        
        <Label Content="Doctor's Dashboard" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="#FF0075D4" Margin="0,30,0,0"/>

        <Grid Margin="0,30,0,0">
            <Frame x:Name="DocFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        

    </Grid>
</Page>
