<Page x:Class="HospitalMS.NursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="NursePage">
    
    <ScrollViewer>
    <Grid>
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FF0075D4" Foreground="White" FontWeight="Bold">
            <MenuItem Header="Dashboard" Click="DashboardClicked"/>
            <MenuItem Header="Profile" Click="ProfileClicked"/>
            <MenuItem Header="Log Out" Click="LogOutClicked"/>
        </Menu>
        <Label Content="Nurse's Dashboard" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="#FF0075D4" Margin="0,30,0,0"/>

        <Grid Margin="0,30,0,0">
            <Frame x:Name="NurseFrame" NavigationUIVisibility="Hidden"/>
        </Grid>

                <Grid Name="UpdatePateint" Visibility="Collapsed" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Center">
            <!-- Define Grid Rows and Columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Title -->
                <RowDefinition Height="Auto" />
                <!--  Name -->
                <RowDefinition Height="Auto" />
                <!-- Father Name -->
                <RowDefinition Height="Auto" />
                <!-- Age -->
                <RowDefinition Height="Auto" />
                <!-- Sex -->
                <RowDefinition Height="Auto" />
                <!-- FIN -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!-- Submit Button -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Label Column -->
                <ColumnDefinition Width="*" />
                <!-- Input Column -->
            </Grid.ColumnDefinitions>

            <!-- Page Title -->
            <Label Grid.Row="0" Grid.ColumnSpan="2"
           Content="Register Patient"
           HorizontalAlignment="Center"
           FontSize="24"
           FontWeight="Bold"
           Foreground="#FF0075D4"
           Margin="0,0,0,20" />

            <!-- Name -->
            <Label Grid.Row="1" Grid.Column="0"
           Content="Name:"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           FontSize="14"
           Margin="0,10,10,10" />
            <TextBox Grid.Row="1" Grid.Column="1"
             x:Name="NameInput"
             Width="250"
             Height="30"
             Margin="0,10,0,10" />

            <!-- Father Name -->
            <Label Grid.Row="2" Grid.Column="0"
           Content="Father Name:"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           FontSize="14"
           Margin="0,10,10,10" />
            <TextBox Grid.Row="2" Grid.Column="1"
             x:Name="FatherNameInput"
             Width="250"
             Height="30"
             Margin="0,10,0,10" />

            <!-- Age -->
            <Label Grid.Row="3" Grid.Column="0"
           Content="Age:"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           FontSize="14"
           Margin="0,10,10,10" />
            <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="AgeInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

                <!-- Sex -->
                <Label Grid.Row="4" Grid.Column="0"
                    Content="Sex:"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Margin="0,10,10,10" />
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton x:Name="rMale" 
                          GroupName="Sex" 
                          Content="Male" 
                          Margin="5,0" />
                    <RadioButton x:Name="rFemale"  
                          GroupName="Sex" 
                          Content="Female" 
                          Margin="5,0" />
                </StackPanel>

                <!-- Disease -->
            <Label Grid.Row="5" Grid.Column="0"
               Content="Disease:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
            <TextBox Grid.Row="5" Grid.Column="1"
                 x:Name="DiseaseInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />
            
            <!-- FIN -->
            <Label Grid.Row="6" Grid.Column="0"
               Content="FIN:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
             <TextBox Grid.Row="6" Grid.Column="1"
                 x:Name="FINInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

                    
                <!-- Submit Button -->
             <Button Grid.Row="8" Grid.ColumnSpan="2"
                Content="Submit"
                HorizontalAlignment="Center"
                Width="150"
                Height="40"
                Margin="0,20,0,0"
                Background="#FF0075D4"
                Foreground="White"
                FontWeight="Bold"
                Click="Reg_User"/>
            </Grid>
        
        
    </Grid>
    </ScrollViewer>
</Page>
