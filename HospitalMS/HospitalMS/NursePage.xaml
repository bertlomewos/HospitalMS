<Page x:Class="HospitalMS.NursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NursePage">

    <DockPanel>
        <!-- Menu positioned on the left -->
        <Border Padding="15" 
                Background="#FF0075D4" 
                CornerRadius="10" 
                Margin="0,0,0,10" 
                BorderBrush="#FF0075D4" 
                BorderThickness="1">
            <Menu Background="#FF0075D4" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  Padding="10,20,10,20" 
                  Width="130">
                <MenuItem Header="Dashboard" Click="DashboardClicked" Margin="0,5,0,5"/>
                <MenuItem Header="Profile" Click="ProfileClicked" Margin="0,5,0,5"/>
                <MenuItem Header="Log Out" Click="LogOutClicked" Margin="0,5,0,5"/>
            </Menu>
        </Border>

        <!-- Main Content -->
        <Border Padding="15" Background="White" 
                CornerRadius="10" Margin="10,0,0,10" 
                BorderBrush="#FF0075D4" BorderThickness="1">
            <Grid Background="#FFF" Margin="10">
                <!-- Define Grid Columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Frame column -->
                    <ColumnDefinition Width="1*"/>
                    <!-- Register Patient column -->
                </Grid.ColumnDefinitions>

                <!-- Frame for navigation/content -->
                <Frame x:Name="NurseFrame" 
                       NavigationUIVisibility="Hidden" 
                       Margin="10" 
                       Grid.Column="0" />

                <!-- Register Patient Section -->
                <Grid Name="UpdatePatient" 
                      Grid.Column="1" 
                      Margin="10" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title -->
                    <Label Grid.Row="0" Grid.ColumnSpan="2"
                           Content="Register Patient"
                           HorizontalAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF0075D4"
                           Margin="0,0,0,20" />

                    <!-- Name -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Content="Name:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             x:Name="NameInput"
                             Width="250"
                             Height="30"
                             Margin="0,10,0,10" />

                    <!-- Father Name -->
                    <Label Grid.Row="2" Grid.Column="0"
                           Content="Father Name:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <TextBox Grid.Row="2" Grid.Column="1"
                             x:Name="FatherNameInput"
                             Width="250"
                             Height="30"
                             Margin="0,10,0,10" />

                    <!-- Age -->
                    <Label Grid.Row="3" Grid.Column="0"
                           Content="Age:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <TextBox Grid.Row="3" Grid.Column="1"
                             x:Name="AgeInput"
                             Width="250"
                             Height="30"
                             Margin="0,10,0,10" />

                    <!-- Sex -->
                    <Label Grid.Row="4" Grid.Column="0"
                           Content="Sex:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <StackPanel Grid.Row="4" Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <RadioButton x:Name="rMale" 
                                     GroupName="Sex" 
                                     Content="Male" 
                                     Margin="5,0" />
                        <RadioButton x:Name="rFemale"  
                                     GroupName="Sex" 
                                     Content="Female" 
                                     Margin="5,0" />
                    </StackPanel>

                    <!-- Disease -->
                    <Label Grid.Row="5" Grid.Column="0"
                           Content="Disease:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <TextBox Grid.Row="5" Grid.Column="1"
                             x:Name="DiseaseInput"
                             Width="250"
                             Height="30"
                             Margin="0,10,0,10" />

                    <!-- FIN -->
                    <Label Grid.Row="6" Grid.Column="0"
                           Content="FIN:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,10,10,10" />
                    <TextBox Grid.Row="6" Grid.Column="1"
                             x:Name="FINInput"
                             Width="250"
                             Height="30"
                             Margin="0,10,0,10" />

                    <!-- Submit Button -->
                    <Button Grid.Row="7" Grid.ColumnSpan="2"
                            Content="Submit"
                            HorizontalAlignment="Center"
                            Width="150"
                            Height="40"
                            Margin="0,20,0,0"
                            Background="#FF0075D4"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Reg_User" />
                </Grid>
            </Grid>
        </Border>
    </DockPanel>
</Page>
