<Page x:Class="HospitalMS.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Label Column -->
            <ColumnDefinition Width="*" />
            <!-- Input Column -->
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="5" HorizontalAlignment="Left">
            <!-- Define Grid Rows and Columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Title -->
                <RowDefinition Height="Auto" />
                <!-- First Name -->
                <RowDefinition Height="Auto" />
                <!-- Last Name -->
                <RowDefinition Height="Auto" />
                <!-- Password -->
                <RowDefinition Height="Auto" />
                <!-- Role -->
                <RowDefinition Height="Auto" />
                <!-- Age -->
                <RowDefinition Height="Auto" />
                <!-- Gender -->
                <RowDefinition Height="Auto" />
                <!-- FIN -->
                <RowDefinition Height="*" />
                <!-- Submit Button -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Label Column -->
                <ColumnDefinition Width="*" />
                <!-- Input Column -->
            </Grid.ColumnDefinitions>

            <!-- First Name -->
            <Label Grid.Row="1" Grid.Column="0"
               Content="First Name:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
            <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="FirstNameInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

            <!-- Last Name -->
            <Label Grid.Row="2" Grid.Column="0"
               Content="Last Name:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
            <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="LastNameInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

            <!-- Password -->
            <Label Grid.Row="3" Grid.Column="0"
               Content="Password:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
            <TextBox Grid.Row="3" Grid.Column="1"
                     x:Name="PasswordInput"
                     Width="250"
                     Height="30"
                     Margin="0,10,0,10" />

            <!-- Age -->
            <Label Grid.Row="5" Grid.Column="0"
               Content="Age:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
            <TextBox Grid.Row="5" Grid.Column="1"
                 x:Name="AgeInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

   
            <!-- Submit Button -->
            <Button Grid.Row="6" Grid.ColumnSpan="2"
                Content="Update"
                HorizontalAlignment="Center"
                Width="150"
                Height="40"
                Margin="0,20,0,0"
                Background="#FF0075D4"
                Foreground="White"
                FontWeight="Bold"
                Click="Update_btn"/>
        </Grid>
        <DataGrid Grid.Column="1" Name="UserprofData" Margin="5" IsReadOnly="True" AutoGenerateColumns="True" SelectionChanged="OnGridChange"/>
    </Grid>
</Page>
