<Page x:Class="HospitalMS.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top">
        <!-- Define Grid Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- First Name -->
            <RowDefinition Height="Auto" />
            <!-- Last Name -->
            <RowDefinition Height="Auto" />
            <!-- Password -->
            <RowDefinition Height="Auto" />
            <!-- Role -->
            <RowDefinition Height="Auto" />
            <!-- Age -->
            <RowDefinition Height="Auto" />
            <!-- Gender -->
            <RowDefinition Height="Auto" />
            <!-- FIN -->
            <RowDefinition Height="Auto" />
            <!-- Specialization -->
            <RowDefinition Height="*" />
            <!-- Submit Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Label Column -->
            <ColumnDefinition Width="*" />
            <!-- Input Column -->
        </Grid.ColumnDefinitions>

        <!-- Page Title -->
        <Label Grid.Row="0" Grid.ColumnSpan="2"
               Content="Registration"
               HorizontalAlignment="Center"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#FF0075D4"
               Margin="0,0,0,20" />

        <!-- First Name -->
        <Label Grid.Row="1" Grid.Column="0"
               Content="First Name:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="FirstNameInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

        <!-- Last Name -->
        <Label Grid.Row="2" Grid.Column="0"
               Content="Last Name:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="LastNameInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

        <!-- Password -->
        <Label Grid.Row="3" Grid.Column="0"
               Content="Password:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <PasswordBox Grid.Row="3" Grid.Column="1"
                     x:Name="PasswordInput"
                     Width="250"
                     Height="30"
                     Margin="0,10,0,10" />

        <!-- Role -->
        <Label Grid.Row="4" Grid.Column="0"
               Content="Role:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <ComboBox Grid.Row="4" Grid.Column="1"
                  x:Name="RoleInput"
                  Width="250"
                  Height="30"
                  Margin="0,10,0,10">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="Doctor" />
            <ComboBoxItem Content="Nurse" />
            <ComboBoxItem Content="Finance" />
            <ComboBoxItem Content="OPS" />
        </ComboBox>

        <!-- Age -->
        <Label Grid.Row="5" Grid.Column="0"
               Content="Age:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <TextBox Grid.Row="5" Grid.Column="1"
                 x:Name="AgeInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

        <!-- Gender -->
        <Label Grid.Row="6" Grid.Column="0"
               Content="Gender:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <RadioButton x:Name="rMale" 
                         GroupName="Gender" 
                         Content="Male" 
                         Margin="5,0" />
            <RadioButton x:Name="rFemale"  
                         GroupName="Gender" 
                         Content="Female" 
                         Margin="5,0" />
        </StackPanel>

        <!-- FIN -->
        <Label Grid.Row="7" Grid.Column="0"
               Content="FIN:"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,10,10,10" />
        <TextBox Grid.Row="7" Grid.Column="1"
                 x:Name="FINInput"
                 Width="250"
                 Height="30"
                 Margin="0,10,0,10" />

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" x:Name="DocLabels" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Collapsed">
            <Label
       Content="Specialization"
                Grid.Column="0"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       FontSize="14"
       Margin="0,10,10,10" />
            <TextBox 
          x:Name="Specialization"
                Grid.Column="1"
          Width="250"
          Height="30"
          Margin="0,10,0,10" />
        </StackPanel>

        <!-- Submit Button -->
        <Button Grid.Row="9" Grid.ColumnSpan="2"
                Content="Submit"
                HorizontalAlignment="Center"
                Width="150"
                Height="40"
                Margin="0,20,0,0"
                Background="#FF0075D4"
                Foreground="White"
                FontWeight="Bold"
                Click="Reg_User"/>
    </Grid>
    
</Page>
